<form name="authenticate" action="{{ path('security_login') }}" method="post">
    <div>
        <label>
            Username:
            <input type="text" name="_username">
        </label>
    </div>
    <div>
        <label>
            Password:
            <input type="password" name="_password">
        </label>
    </div>
    <div>
        CSRF Token:
        <input type="text" name="_csfr_token" value="{{ csrf_token('authenticate') }}">
        <input type="submit">
    </div>
</form>